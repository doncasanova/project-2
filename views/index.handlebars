<h1>Tickets available for purchace or trade</h1>


<ul>
  {{#each tickets}}
    
      {{> tickets/ticket-partial}}

  {{/each}}
</ul>

<h2>Add a ticket</h2>

<div class="container">
  <div class="row">
    <div class="col-md-12 ">

      <form class="create-ticket-form">
        <fieldset>
          <legend></legend>
          <div class="form-group">
            <label class="form-control-label" for="email"></label>
            <input type="text" id="email" name="email" placeholder="Enter your email address" class="form-control-lg">
          </div>
          <div class="form-group">
            <label class="form-control-label" for="ticket_name"></label>
            <input type="text" id="ticket_name" name="ticket_name" placeholder="Enter a ticket name" class="form-control-lg">
          </div>
          <div class="form-group">
            <label class="form-control-label" for="location"></label>
            <input type="text" id="location" name="location" placeholder="Enter a location" class="form-control-lg">
          </div>
          <div class="form-group">
            <label class="form-control-label" for="season_start"></label>
            <input type="text" id="season_start" name="season_start" placeholder="Enter season start date" class="form-control-lg">
          </div>
          <div class="form-group">
            <label class="form-control-label" for="season_end"></label>
            <input type="text" id="season_end" name="season_end" placeholder="Enter season end date" class="form-control-lg">
          </div>
          <div class="form-group">
            <label class="form-control-label" for="price"></label>
            <input type="text" id="price" name="price" placeholder="Enter a ticket price" class="form-control-lg">
          </div>
        </fieldset>
        <button type="submit" class="btn btn-primary mb-3">Add</button>
      </form>
      <label>Enter a ticket you want to store and click the "Add" button</label>

    </div>
  </div>
</div>